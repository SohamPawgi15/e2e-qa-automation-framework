{
  "name": "e2e-qa-automation-framework",
  "version": "1.0.0",
  "description": "End-to-End QA Automation Framework for E-commerce Testing",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:quick": "playwright test tests/quick-smoke.spec.ts",
    "test:debug": "playwright test tests/debug-ci.spec.ts",
    "test:smoke": "playwright test tests/smoke-test.spec.ts",
    "test:home": "playwright test tests/home-page.spec.ts",
    "test:auth": "playwright test tests/user-authentication.spec.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug-mode": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:allure": "allure serve allure-results",
    "install:browsers": "playwright install",
    "codegen": "playwright codegen",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e",
    "automation",
    "testing",
    "qa"
  ],
  "author": "QA Automation Engineer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-playwright": "^2.11.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  }
} 